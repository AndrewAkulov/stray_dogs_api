<div id="categories">
  <%= form_with(model: subscribe, local: true, id: "forma", class: 'form-inline') do |form| %>
    <% if subscribe.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(subscribe.errors.count, "error") %> prohibited this subscribe from being saved:</h2>

        <ul>
          <% subscribe.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>


    <div id="submited-fields">
      <%= form.fields_for :subscriptions do |subscription| %>
        <%= render 'subscription_fields', f: subscription %>
      <% end %> 
    </div>

    <div id="add-category">
      <%= link_to_add_association image_tag("plus.png", class: "add-subscribe-btn mb-2 mr-sm-2"), form, :subscriptions %>
    </div>
    
    <div class="actions subscribe-btn">
      <%= form.submit 'Subscribe', class: 'btn btn-primary' %>
    </div>


  <% end %>
</div>